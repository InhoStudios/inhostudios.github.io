{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES6",
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,

    "jsx": "react",
    "lib": ["DOM", "ESNext"],

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src"]
}
